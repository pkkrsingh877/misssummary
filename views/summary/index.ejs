<% layout('/layouts/boilerplate') %>
    <% for(let i = (data.length - 1); i >= 0; i--){ %>
        <section class="card shadow p-3 mb-3 bg-body rounded">
            <h2>
                <a href="summary/<%= data[i]._id %>" class="title">
                    <%= data[i].title %>
                </a>
            </h2>
            <hr>
            <article class="description">
                <%= data[i].description %> <a href="summary/<%= data[i]._id %>"">[Read More...]</a>
            </article>
            <div class="icons">
                <span class="bi bi-person icon"> Prabhat Kumar</span>
                <span class="bi bi-tag icon"> Tags</span>
                <span class="bi bi-ui-checks-grid icon"> Category</span>
                <span class="bi bi-clock icon"> <%= data[i].modifiedAt.toLocaleString() %></span>
                <span class="bi bi-calendar icon"> <%= data[i].createdAt.toLocaleString() %></span>
                <span class="bi bi-book icon"> <%= data[i].readMinutes %> Minutes</span>
            </div>
        </section>
    <% } %>
